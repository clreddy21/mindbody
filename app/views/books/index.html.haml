.content
  .row
    .col-md-3
    .col-md-4
      %h2= link_to 'Go to Authors', authors_path

  .col-md-3
  .col-md-6
    %br
    %a.pull-right.btn.btn-info{:href => new_book_path} Create Book
    %br
    %br
    %br
    %table.table.table-striped.table-bordered.customer-table
      %thead
        %tr
          %th Title
          %th Edit
          %th Delete
      %tbody
        - @books.each do |book|
          %tr
            %td= book.title
            %td= link_to "Edit", edit_book_path(book.id)
            %td= link_to "Delete", book_path(book), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }